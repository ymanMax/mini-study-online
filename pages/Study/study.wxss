/* pages/Study/study.wxss */
.study-container {
  display: flex;
  flex-direction: column;
  padding-bottom: 32rpx;
  align-items: center;
  position: relative;
}

.study-item {
  margin-top: 32rpx;
  background-color: #fff;
  border-radius: 12rpx;
  width: 686rpx;
  height: 220rpx;
  display: flex;
  align-items: center;
}

.study-item image {
  width: 108rpx;
  height: 108rpx;
  margin-left: 50rpx;
}

.study-item .meta {
  flex: 1;
  margin-left: 50rpx;
  display: flex;
  flex-direction: column;
}

.study-item .meta .title {
  font-size: 30rpx;
  color: #333333;
}

.study-item .meta .progress {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #A8A8A8;
}

.circle {
  width: 109rpx;
  height: 109rpx;
  margin-right: 56rpx;
}

.no-study-tip {
  margin-top: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 500rpx;
  font-size: 15px;
}

/* 学习提醒样式 */
.reminders-section {
  width: 100%;
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-header:active {
  background-color: #fafafa;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #212121;
}

.arrow-icon {
  width: 48rpx;
  height: 48rpx;
  transition: transform 0.3s ease;
}

.arrow-icon.expanded {
  transform: rotate(90deg);
}

.add-goal-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(90deg, #ff9a29, #ffc107);
  color: #fff;
  border-radius: 50%;
  font-size: 36rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.add-goal-btn:active {
  transform: scale(0.95);
}

.reminders-list {
  background-color: #fff;
  padding: 0 30rpx 30rpx;
}

.reminder-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.reminder-item:last-child {
  border-bottom: none;
}

.reminder-content {
  flex: 1;
  margin-right: 20rpx;
}

.reminder-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #212121;
  margin-bottom: 8rpx;
}

.reminder-message {
  display: block;
  font-size: 24rpx;
  color: #959595;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.reminder-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex-wrap: wrap;
}

.reminder-priority {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.reminder-priority.priority-high {
  background-color: rgba(255, 77, 79, 0.1);
  color: #ff4d4f;
}

.reminder-priority.priority-medium {
  background-color: rgba(250, 173, 20, 0.1);
  color: #faad14;
}

.reminder-priority.priority-low {
  background-color: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.reminder-deadline {
  font-size: 22rpx;
  color: #1890ff;
}

.read-btn {
  padding: 16rpx 32rpx;
  background-color: #f5f5f5;
  color: #959595;
  border-radius: 24rpx;
  font-size: 24rpx;
  border: none;
  transition: all 0.3s ease;
}

.read-btn:active {
  background-color: #e0e0e0;
}

/* 学习目标样式 */
.goals-section {
  width: 100%;
  margin-bottom: 30rpx;
}

.goals-list {
  background-color: #fff;
  padding: 0 30rpx 30rpx;
}

.goal-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.goal-item:last-child {
  border-bottom: none;
}

.goal-content {
  flex: 1;
  margin-right: 20rpx;
}

.goal-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #212121;
  margin-bottom: 8rpx;
}

.goal-description {
  display: block;
  font-size: 24rpx;
  color: #959595;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.goal-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.progress-bar-small {
  width: 200rpx;
  height: 6rpx;
  background-color: #e0e0e0;
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-fill-small {
  height: 100%;
  background: linear-gradient(90deg, #ff9a29, #ffc107);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.progress-text-small {
  font-size: 22rpx;
  color: #959595;
}

.goal-period {
  font-size: 22rpx;
  color: #1890ff;
}

.goal-status {
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.goal-status.status-in_progress {
  background-color: rgba(255, 154, 41, 0.1);
  color: #ff9a29;
}

.goal-status.status-completed {
  background-color: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.goal-status.status-pending {
  background-color: rgba(250, 173, 20, 0.1);
  color: #faad14;
}

.empty-goals {
  padding: 60rpx 0;
  text-align: center;
}

.empty-tip {
  font-size: 24rpx;
  color: #959595;
  line-height: 1.5;
}

/* 学习进度样式 */
.progress-section {
  width: 100%;
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
  from {
    transform: translateY(-100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #212121;
}

.modal-close {
  font-size: 48rpx;
  color: #959595;
  line-height: 1;
  transition: color 0.3s ease;
}

.modal-close:active {
  color: #212121;
}

.modal-body {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #212121;
  margin-bottom: 16rpx;
}

.form-input,
.form-textarea,
.form-picker {
  width: 100%;
  padding: 24rpx;
  background-color: #f5f5f5;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #212121;
  transition: all 0.3s ease;
}

.form-input:focus,
.form-textarea:focus,
.form-picker:active {
  background-color: #fff;
  border-color: #ff9a29;
}

.form-textarea {
  min-height: 120rpx;
  line-height: 1.4;
}

.picker-text {
  color: #212121;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #212121;
}

.btn-cancel:active {
  background-color: #e0e0e0;
}

.btn-confirm {
  background: linear-gradient(90deg, #ff9a29, #ffc107);
  color: #fff;
}

.btn-confirm:active {
  transform: scale(0.98);
}
