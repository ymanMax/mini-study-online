/* pages/study/note/note.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 页面标题 */
.page-header {
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  background-color: #007aff;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  padding: 15rpx 25rpx;
  border-radius: 50rpx;
  border: none;
}

.add-btn:active {
  opacity: 0.8;
}

/* 笔记列表 */
.notes-list {
  padding: 0 30rpx;
}

.note-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.note-item:active {
  transform: scale(0.98);
}

.note-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.note-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.note-date {
  font-size: 22rpx;
  color: #999;
  white-space: nowrap;
}

.note-meta {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.note-course {
  font-size: 24rpx;
  color: #007aff;
  background-color: #e8f4ff;
  padding: 6rpx 16rpx;
  border-radius: 15rpx;
}

.note-chapter {
  font-size: 24rpx;
  color: #4cd964;
  background-color: #e8fff0;
  padding: 6rpx 16rpx;
  border-radius: 15rpx;
}

.note-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.note-actions {
  display: flex;
  justify-content: flex-end;
  gap: 15rpx;
}

.edit-btn, .delete-btn {
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.edit-btn {
  background-color: #f0f0f0;
  color: #666;
  border: none;
}

.delete-btn {
  background-color: #ffe6e6;
  color: #ff4d4f;
  border: none;
}

.edit-btn:active, .delete-btn:active {
  opacity: 0.8;
}

/* 空状态 */
.empty-state {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 80rpx 30rpx;
  margin: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.empty-subtitle {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 40rpx;
  line-height: 1.4;
}

.empty-btn {
  background-color: #007aff;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  border: none;
}

.empty-btn:active {
  opacity: 0.8;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background-color: #fff;
  border-radius: 16rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  font-weight: bold;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.close-btn:active {
  background-color: #f0f0f0;
}

.modal-body {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.form-input, .form-textarea, .picker-text {
  background-color: #fafafa;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
}

.form-input:focus, .form-textarea:focus {
  border-color: #007aff;
  background-color: #fff;
}

.form-textarea {
  min-height: 150rpx;
  line-height: 1.6;
  resize: vertical;
}

.picker-text {
  color: #666;
}

.modal-footer {
  padding: 30rpx;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  justify-content: flex-end;
  gap: 15rpx;
}

.cancel-btn, .confirm-btn {
  font-size: 28rpx;
  padding: 15rpx 30rpx;
  border-radius: 8rpx;
  font-weight: bold;
}

.cancel-btn {
  background-color: #f0f0f0;
  color: #666;
  border: none;
}

.confirm-btn {
  background-color: #007aff;
  color: #fff;
  border: none;
}

.cancel-btn:active, .confirm-btn:active {
  opacity: 0.8;
}
