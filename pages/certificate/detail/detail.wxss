/* pages/certificate/detail/detail.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 30rpx;
}

/* 证书卡片 */
.certificate-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
  border: 4rpx solid #e0e0e0;
  position: relative;
}

.certificate-card::before {
  content: '';
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  right: -20rpx;
  bottom: -20rpx;
  background: linear-gradient(45deg, #007aff, #4cd964, #ffcc00, #007aff);
  border-radius: 24rpx;
  z-index: -1;
  opacity: 0.6;
  animation: gradientShift 3s ease infinite;
}

@keyframes gradientShift {
  0%, 100% { opacity: 0.6; }
  50% { opacity: 0.8; }
}

/* 证书头部 */
.certificate-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 30rpx;
  display: block;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
  font-family: 'Courier New', monospace;
}

/* 证书主体 */
.certificate-body {
  text-align: center;
  margin-bottom: 60rpx;
}

.award-text {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}

.user-name {
  font-size: 42rpx;
  font-weight: bold;
  color: #007aff;
  display: block;
  margin-bottom: 30rpx;
}

.course-text {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}

.course-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.course-desc {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 证书底部 */
.certificate-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 40rpx;
}

.signature-section {
  text-align: center;
  flex: 1;
}

.signature {
  width: 150rpx;
  height: 60rpx;
  margin: 0 auto 15rpx;
  display: block;
  opacity: 0.8;
}

.signatory {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.position {
  font-size: 22rpx;
  color: #999;
  display: block;
}

.date-section {
  text-align: center;
  flex: 1;
}

.issue-date {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.date-label {
  font-size: 22rpx;
  color: #999;
  display: block;
}

/* 证书编号 */
.certificate-id {
  text-align: center;
  font-size: 22rpx;
  color: #999;
  padding-top: 20rpx;
  border-top: 2rpx solid #e0e0e0;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.download-btn, .share-btn {
  flex: 1;
  border-radius: 50rpx;
  padding: 25rpx;
  border: none;
  font-size: 28rpx;
  font-weight: bold;
}

.download-btn {
  background: linear-gradient(135deg, #007aff 0%, #0051d5 100%);
  color: #fff;
}

.share-btn {
  background: linear-gradient(135deg, #4cd964 0%, #28a745 100%);
  color: #fff;
}

.download-btn:active, .share-btn:active {
  opacity: 0.8;
}

.btn-text {
  font-size: 28rpx;
}

/* 证书说明 */
.certificate-info {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 25rpx;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  gap: 15rpx;
}

.info-icon {
  font-size: 24rpx;
  color: #4cd964;
  font-weight: bold;
  margin-top: 2rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  flex: 1;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .certificate-card {
    padding: 40rpx 30rpx;
  }

  .title {
    font-size: 40rpx;
  }

  .user-name {
    font-size: 36rpx;
  }

  .course-name {
    font-size: 32rpx;
  }

  .certificate-footer {
    flex-direction: column;
    gap: 40rpx;
  }

  .action-buttons {
    flex-direction: column;
  }
}
