/* pages/community/index.wxss */
.community-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  border: 1rpx solid #ddd;
  border-radius: 35rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #f8f8f8;
}

.search-btn {
  width: 120rpx;
  height: 70rpx;
  background-color: #ff9a29;
  color: #fff;
  border-radius: 35rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  line-height: 70rpx;
}

/* 发布按钮 */
.publish-section {
  padding: 0 20rpx 20rpx;
}

.publish-btn {
  width: 100%;
  height: 80rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 10rpx;
  font-size: 32rpx;
}

/* 话题列表 */
.topic-list {
  padding: 0 20rpx 20rpx;
}

.topic-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.topic-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.username {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.teacher-tag {
  background-color: #ff6b6b;
  color: #fff;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
}

.topic-content {
  margin-bottom: 20rpx;
}

.topic-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.topic-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.topic-stats {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #999;
}

.stat-item {
  display: flex;
  align-items: center;
}

.stat-icon {
  margin-right: 5rpx;
}

/* 学习小组 */
.group-section {
  padding: 0 20rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more-btn {
  font-size: 26rpx;
  color: #007aff;
  background: none;
}

.group-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.group-item {
  width: 345rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.group-avatar {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
}

.group-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.group-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.group-members {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.join-btn {
  width: 100%;
  height: 60rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.joined-btn {
  width: 100%;
  height: 60rpx;
  background-color: #f0f0f0;
  color: #666;
  border-radius: 30rpx;
  font-size: 26rpx;
}
