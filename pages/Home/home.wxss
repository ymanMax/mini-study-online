/* pages/Home/home.wxss */
.home-container {
  padding: 20rpx;
  background-color: #fff;
}

swiper {
  width: 100%;
  height: 342rpx;
}

swiper-item {
  width: 100%;
  height: 100%;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.tips {
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tips .tip {
  font-size: 36rpx;
  font-weight: 700;
  color: #212121;
}

.tips image {
  width: 48rpx;
  height: 48rpx;
}

.course-container {
  height: 170rpx;
  white-space: nowrap;
}

.course-item {
  width: 296rpx;
  height: 168rpx;
  display: inline-block;
  margin-right: 32rpx;
}

.course-item image {
  width: 100%;
  height: 100%;
}

.hot-video {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}

.hot-video .video-item {
  width: 340prx;
  display: flex;
  flex-direction: column;
}

.video-item image {
  width: 340rpx;
  height: 210rpx;
  border-radius: 12rpx;
}

.video-item .title {
  margin-top: 15rpx;
  color: #262626;
  font-size: 26rpx;
}

.video-item .subtitle {
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  color: #959595;
  font-size: 18rpx;
}

/* 猜你喜欢课程样式 */
.recommend-courses {
  padding: 0 20rpx 20rpx;
}

.recommend-item {
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
}

.recommend-item .course-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.recommend-item .course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.course-info .course-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #212121;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.course-info .course-subtitle {
  font-size: 24rpx;
  color: #959595;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.course-info .course-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.course-meta .course-level {
  font-size: 22rpx;
  color: #ff9a29;
  background-color: rgba(255, 154, 41, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.course-meta .match-score {
  font-size: 22rpx;
  color: #52c41a;
}

/* 热门课程样式 */
.hot-courses {
  padding: 0 20rpx 40rpx;
}

.hot-item {
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
}

.hot-item .course-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.hot-item .course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.hot-item .course-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex-wrap: wrap;
}

.hot-item .enroll-count {
  font-size: 22rpx;
  color: #1890ff;
}

.hot-item .rating {
  font-size: 22rpx;
  color: #faad14;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}