/* pages/exam/take.wxss */
.exam-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.exam-header {
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.exam-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.exam-mode {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff9a29;
}

.exam-time {
  font-size: 28rpx;
  color: #666;
}

.question-progress {
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.question-nav {
  white-space: nowrap;
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.question-nav-item {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
  background: #f0f0f0;
  margin-right: 15rpx;
  font-size: 28rpx;
  color: #666;
}

.question-nav-item.active {
  background: #ff9a29;
  color: white;
}

.question-nav-item.answered {
  background: #4CAF50;
  color: white;
}

.question-content {
  background: white;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.question-title {
  margin-bottom: 30rpx;
}

.question-type {
  display: inline-block;
  background: #ff9a29;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-bottom: 15rpx;
}

.question-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
}

.question-options {
  margin-top: 20rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.option-item.selected {
  border-color: #ff9a29;
  background: #fff8f0;
}

.option-letter {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: #ff9a29;
  color: white;
  border-radius: 50%;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.option-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.nav-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.nav-btn {
  width: 150rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  font-size: 28rpx;
  border: none;
}

.prev-btn {
  background: #e0e0e0;
  color: #666;
}

.next-btn {
  background: #ff9a29;
  color: white;
}

.submit-section {
  padding: 0 20rpx;
  margin-bottom: 40rpx;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #ff9a29;
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
}
