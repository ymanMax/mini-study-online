<!--pages/my/my.wxml-->
<view class="my-container" wx:if="{{userInfo}}">
	<view class="header">
		<image class="avatar" src="{{userInfo.avatar || '/assets/images/avatar@2x.png'}}" alt="" />
		<text class="nickname">{{userInfo.nickname || '酷小鱼'}}</text>
		<block wx:if="{{userInfo.isTeacher}}">
			<text class="teacher-badge">认证讲师</text>
		</block>
	</view>
	<view class="tips">
		<view class="left">
			<text class="title">{{userInfo.study_hour}}</text>
			<text class="subtitle">累计学习小时</text>
		</view>
		<view class="middle">
			<text class="title">{{userInfo.points}}</text>
			<text class="subtitle">我的积分</text>
		</view>
		<view class="right">
			<text class="title">{{userInfo.course_count}}</text>
			<text class="subtitle">我的课程</text>
		</view>
	</view>
	<view class="level-info">
		<text class="level-title">{{userInfo.level}}</text>
		<text class="level-desc">继续努力，升级到下一级别！</text>
	</view>
	<view class="cells">
		<view class="cell">
			<text>学习历史</text>
			<image src="/assets/images/arrow@2x.png" alt="" />
		</view>
		<view class="cell">
			<text>积分记录</text>
			<image src="/assets/images/arrow@2x.png" alt="" />
		</view>
		<view class="cell">
			<text>我的小组</text>
			<image src="/assets/images/arrow@2x.png" alt="" />
		</view>
		<view class="cell">
			<text>消息提醒</text>
			<image src="/assets/images/arrow@2x.png" alt="" />
		</view>
		<view bindtap="clearCache" class="cell">
			<text>清除缓存</text>
			<image src="/assets/images/arrow@2x.png" alt="" />
		</view>
		<view class="cell">
			<text>商务合作</text>
			<image src="/assets/images/arrow@2x.png" alt="" />
		</view>
		<view bindtap="contact" class="cell">
			<text>在线客服</text>
			<image src="/assets/images/arrow@2x.png" alt="" />
		</view>
	</view>
</view>