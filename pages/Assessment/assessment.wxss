/* pages/Assessment/assessment.wxss */

.assessment-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 测评头部 */
.assessment-header {
  padding: 40rpx 30rpx 20rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background-color: #e0e0e0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #ff9a29, #ffc107);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  text-align: center;
  font-size: 24rpx;
  color: #959595;
}

/* 题目卡片 */
.question-card {
  margin: 0 30rpx 30rpx;
  padding: 40rpx 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
}

.question-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #212121;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

/* 选项组 */
.options-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fafafa;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  position: relative;
}

.option-item:active {
  background-color: #f0f0f0;
}

.option-item.selected {
  background-color: rgba(255, 154, 41, 0.1);
  border-color: #ff9a29;
}

.option-label {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: 600;
  color: #212121;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.option-item.selected .option-label {
  background-color: #ff9a29;
  border-color: #ff9a29;
  color: #fff;
}

.option-text {
  flex: 1;
  font-size: 28rpx;
  color: #212121;
  line-height: 1.4;
}

.option-checkbox {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: transparent;
  border: 2rpx solid #e0e0e0;
  border-radius: 50%;
  font-size: 24rpx;
  color: transparent;
  transition: all 0.3s ease;
}

.option-item.selected .option-checkbox {
  background-color: #ff9a29;
  border-color: #ff9a29;
  color: #fff;
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(90deg, #ff9a29, #ffc107);
  color: #fff;
}

.btn-primary:active {
  transform: scale(0.98);
}

.btn-primary[disabled] {
  background-color: #e0e0e0;
  color: #959595;
  background-image: none;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #212121;
  margin-top: 20rpx;
}

.btn-secondary:active {
  background-color: #e0e0e0;
}

/* 测评结果页面 */
.result-container {
  padding: 40rpx 30rpx;
}

.result-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.result-icon {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(82, 196, 26, 0.1);
  color: #52c41a;
  border-radius: 50%;
  font-size: 60rpx;
  margin: 0 auto 30rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #212121;
}

.result-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.result-item:last-child {
  margin-bottom: 0;
}

.result-label {
  font-size: 28rpx;
  color: #959595;
}

.result-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #212121;
}

.result-value.level-beginner {
  color: #1890ff;
}

.result-value.level-intermediate {
  color: #52c41a;
}

.result-value.level-advanced {
  color: #ff9a29;
}

.result-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #212121;
  margin-bottom: 30rpx;
}

.advantage-list,
.weakness-list,
.recommendation-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.advantage-item,
.weakness-item,
.recommendation-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.advantage-icon,
.weakness-icon,
.recommendation-icon {
  font-size: 28rpx;
  margin-top: 2rpx;
  flex-shrink: 0;
}

.advantage-icon {
  color: #52c41a;
}

.weakness-icon {
  color: #ff4d4f;
}

.recommendation-icon {
  color: #ff9a29;
}

.advantage-text,
.weakness-text,
.recommendation-text {
  flex: 1;
  font-size: 26rpx;
  color: #212121;
  line-height: 1.5;
}

.result-actions {
  margin-top: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #ff9a29;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #959595;
}
