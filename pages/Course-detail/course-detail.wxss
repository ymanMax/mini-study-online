/* pages/Course-detail/course-detail.wxss */
.course-detail-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.course-info {
  background: white;
  padding: 40rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.course-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.course-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.chapters-list {
  background: white;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.chapter-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.chapter-item:last-child {
  border-bottom: none;
}

.chapter-info {
  flex: 1;
}

.chapter-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.chapter-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.exercise-btn {
  background: #ff9a29;
  color: white;
  padding: 15rpx 25rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
  white-space: nowrap;
}