/* pages/Course-detail/course-detail.wxss */
.course-detail-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 课程头部信息 */
.course-header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.course-cover {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.course-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #333;
}

.course-teacher {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.course-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.course-stats {
  display: flex;
  gap: 30rpx;
  font-size: 26rpx;
  color: #999;
}

/* 问答区域 */
.qa-section {
  padding: 0 20rpx 20rpx;
}

.qa-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.ask-btn {
  background-color: #ff9a29;
  color: #fff;
  border-radius: 20rpx;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
}

/* 问题列表 */
.question-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.question-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.question-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.question-meta {
  flex: 1;
}

.asker-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.ask-time {
  font-size: 24rpx;
  color: #999;
}

.question-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 15rpx;
}

.question-stats {
  display: flex;
  gap: 30rpx;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
}

/* 最佳答案 */
.best-answer {
  background-color: #f0f8ff;
  border-left: 5rpx solid #007aff;
  padding: 20rpx;
  border-radius: 5rpx;
  margin-bottom: 20rpx;
}

.answer-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.answer-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  margin-right: 15rpx;
}

.answer-meta {
  flex: 1;
}

.answerer-name {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.teacher-tag {
  background-color: #ff6b6b;
  color: #fff;
  padding: 3rpx 10rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
  margin-left: 10rpx;
}

.answer-time {
  font-size: 22rpx;
  color: #999;
}

.answer-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 15rpx;
}

.answer-stats {
  display: flex;
  gap: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.reward {
  color: #ff9a29;
  font-weight: bold;
}

/* 查看更多回答按钮 */
.view-answers-btn {
  width: 100%;
  background-color: #f0f0f0;
  color: #666;
  border-radius: 5rpx;
  font-size: 26rpx;
  padding: 15rpx;
}
