/* pages/Course-detail/course-detail.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 课程头部信息 */
.course-header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.course-cover {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  margin-right: 30rpx;
}

.course-info {
  flex: 1;
}

.course-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.course-subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.course-stats {
  display: flex;
  gap: 40rpx;
}

.course-stats text {
  font-size: 24rpx;
  color: #999;
}

/* 学习进度条 */
.progress-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-header text:first-child {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.progress-header text:last-child {
  font-size: 32rpx;
  font-weight: bold;
  color: #007aff;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
}

.progress-fill {
  height: 100%;
  background-color: #007aff;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-details {
  display: flex;
  justify-content: space-between;
}

.progress-details text {
  font-size: 24rpx;
  color: #999;
}

/* 章节列表 */
.chapters-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 25rpx;
}

.chapters-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.chapter-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.chapter-item:active {
  background-color: #f0f0f0;
}

.chapter-item.completed {
  background-color: #f0f8ff;
  border: 2rpx solid #e0f0ff;
}

.chapter-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.chapter-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #007aff;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.chapter-icon.completed {
  background-color: #4cd964;
}

.chapter-info {
  flex: 1;
}

.chapter-title {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.chapter-duration {
  font-size: 22rpx;
  color: #999;
}

.chapter-right {
  display: flex;
  align-items: center;
}

.completed-badge {
  background-color: #4cd964;
  color: #fff;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.play-icon {
  width: 50rpx;
  height: 50rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

/* 证书领取 */
.certificate-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.certificate-btn {
  background: linear-gradient(135deg, #007aff 0%, #0051d5 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  padding: 25rpx;
  border-radius: 50rpx;
  border: none;
  width: 100%;
  max-width: 500rpx;
}

.certificate-btn:active {
  opacity: 0.8;
}
